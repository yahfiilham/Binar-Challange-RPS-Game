<%- include('layouts/header') %> 

<%- include('layouts/nav') %> 

<% if (msg.length !== 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <%= msg %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="container">
    <!-- Code ini akan berjalan bila terjadi error -->

    <div class="row justify-content-md-center" style="margin-top: 100px">
        <div class="col-md-4 card shadow-sm p-3 mb-5 bg-body">
            <form method="POST" action="/login">
                <div class="form-group mt-md-4">
                    <label for="username" class="mb-md-2">Username</label>
                    <input name="username" type="text" class="form-control login" id="username" placeholder="Insert your username">
                </div>
                <div class="form-group mt-md-4">
                    <label for="password" class="mb-md-2">Password</label>
                    <input name="password" type="password" class="form-control login" id="password" placeholder="Insert your password">
                </div>
                <% if (typeof errors != 'undefined') { %>
                    <div class="text-danger mt-md-2">
                        <%= errors %> 
                    </div>
                <% } %>
                <button type="submit" class="btn btn-primary mt-md-4 px-md-4">Login</button>
            </form>
            <p class="mt-md-2"><small>New to RPS Game?</small><a href="/register" class="text-decoration-none ms-2">Join now</a></p> 
            <a href="/" class="mt-md-3 mb-md-3 text-decoration-none ">&laquo; Back To Home</a>
        </div>
    </div>
</div>


<%- include('layouts/footer') %> 