<%- include('layouts/header') %> 

<%- include('layouts/nav') %> 

<div class="container">
    <div class="row justify-content-md-center" style="margin-top: 100px">
        <div class="col-md-4 card shadow-sm p-3 mb-5 bg-body">
            <form method="POST" action="/">
                <div class="form-group mt-md-4">
                    <label for="username" class="mb-md-2">Username</label>
                    <input name="username" type="text" class="form-control login" id="username" placeholder="Enter username">
                </div>
                <div class="form-group mt-md-4">
                    <label for="password" class="mb-md-2">Password</label>
                    <input name="password" type="password" class="form-control login" id="password" placeholder="Password">
                </div>
                <% if (typeof errors != 'undefined') { %>
                    <div class="text-danger mt-md-2">
                        <%= errors %> 
                    </div>
                <% } %>
                <button type="submit" class="btn btn-primary mt-md-4 px-md-4">Login</button>
            </form>
            <a href="/users/forgot-password" class="text-decoration-none mt-md-1"><small>forgot password?</small></a>
            <a href="/" class="mt-md-3 mb-md-3 text-decoration-none ">&laquo; Back To Home</a>
        </div>
    </div>
</div>


<%- include('layouts/footer') %> 