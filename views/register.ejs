<%- include('layouts/nav') %> 

<section class="container-fluid">
    <div class="row justify-content-md-center" style="margin-top: 100px">
        <div class="col-md-4 card shadow-sm p-3 mb-5 bg-body">
            <div class="container mt-3">
                <div class="row">
                    <div class="com-md-6">
                        <h2>Register</h2>

                        <form method="post" action="/register">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Insert your username" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password"  placeholder="Insert your password" required>
                            </div>
                            
                            <button type="submit" class="btn btn-primary add-user">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


